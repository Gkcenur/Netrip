<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/topBar</item>
        <item name="colorPrimaryDark">@color/topBar</item>
        <item name="colorAccent">@color/topBar</item>
        <item name="android:windowBackground">@color/white</item>
    </style>

    <!-- Card style for EditTexts and containers -->
    <style name="CardEditText">
        <item name="android:background">@drawable/bg_card</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">16sp</item>
        <item name="android:padding">12dp</item>
    </style>

    <!-- Button style -->
    <style name="GreenButton" parent="Widget.AppCompat.Button">
        <item name="android:backgroundTint">@color/topBar</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingLeft">24dp</item>
        <item name="android:paddingRight">24dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>

    <!-- ToggleButton style for reservation types -->
    <style name="ReservationToggleButton" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/bg_card</item>
        <item name="android:textColor">@color/topBar</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">14sp</item>
        <item name="android:padding">8dp</item>
    </style>

    <!-- Header text style for reservation -->
    <style name="ReservationHeaderText">
        <item name="android:textColor">@color/topBar</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Subheader text style for reservation -->
    <style name="ReservationSubHeaderText">
        <item name="android:textColor">@color/topBar</item>
        <item name="android:textSize">14sp</item>
    </style>

    <!-- Header text style -->
    <style name="HeaderText">
        <item name="android:textColor">@color/topBar</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Subheader text style -->
    <style name="SubHeaderText">
        <item name="android:textColor">@color/topBar</item>
        <item name="android:textSize">14sp</item>
    </style>

</resources>
