<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/main"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".MainActivity">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hello World!"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/btnOpenAddBudget"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Open Add Budget" />

            <Button
                android:id="@+id/btnOpenAddDiary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Open Add Diary"
                app:layout_constraintTop_toBottomOf="@id/btnOpenAddBudget"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="16dp" />

            <Button
                android:id="@+id/btnOpenAddExpense"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Open Add Expense"
                app:layout_constraintTop_toBottomOf="@id/btnOpenAddDiary"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="16dp" />

            <Button
                android:id="@+id/btnOpenAddReservation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Open Add Reservation"
                app:layout_constraintTop_toBottomOf="@id/btnOpenAddExpense"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="16dp" />

            <Button
                android:id="@+id/btnOpenCurrencyConverter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Open Currency Converter"
                app:layout_constraintTop_toBottomOf="@id/btnOpenAddReservation"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="16dp" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>

</ScrollView>