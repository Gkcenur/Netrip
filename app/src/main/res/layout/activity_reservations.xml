<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- Header -->
        <LinearLayout
            android:id="@+id/topBar"
            android:layout_width="match_parent"
            android:layout_height="72dp"
            android:background="@color/topBar"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingStart="8dp"
            android:paddingEnd="8dp">

            <ImageView
                android:id="@+id/btnBack"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/bg_circle_trans_white"
                android:src="@drawable/ic_back_planner"
                android:contentDescription="@string/back"
                android:padding="8dp" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Reservations"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"
                    android:textSize="20sp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Paris, France"
                    android:textColor="@android:color/white"
                    android:textSize="14sp" />
            </LinearLayout>

            <FrameLayout
                android:id="@+id/profileContainer"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="@drawable/bg_profile_circle"
                android:layout_gravity="center_vertical|end"
                android:layout_marginEnd="8dp">

                <ImageView
                    android:id="@+id/ivProfile"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_profile"
                    android:contentDescription="Profile" />
            </FrameLayout>
        </LinearLayout>

        <!-- Filter Chips Row -->
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fillViewport="true"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="8dp">

                <Button
                    android:id="@+id/chipAll"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:text="All"
                    android:textColor="@android:color/white"
                    android:background="@drawable/bg_chip_selected"
                    android:layout_marginEnd="4dp" />
                <Button
                    android:id="@+id/chipFlights"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:text="Flights"
                    android:textColor="#444"
                    android:background="@drawable/bg_chip"
                    android:layout_marginEnd="4dp"/>
                <Button
                    android:id="@+id/chipHotels"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:text="Hotels"
                    android:textColor="#444"
                    android:background="@drawable/bg_chip"
                    android:layout_marginEnd="4dp"/>
                <Button
                    android:id="@+id/chipActivities"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:text="Activities"
                    android:textColor="#444"
                    android:background="@drawable/bg_chip"/>
            </LinearLayout>
        </HorizontalScrollView>

        <!-- Search Button Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:background="@color/white"
            android:paddingEnd="16dp"
            android:paddingTop="8dp"
            android:paddingBottom="0dp">
            <ImageButton
                android:id="@+id/btnSearch"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/bg_search_circle"
                android:src="@drawable/ic_search"
                android:contentDescription="Search"
                android:layout_marginStart="8dp"/>
        </LinearLayout>

        <!-- Upcoming Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingStart="16dp"
            android:paddingEnd="16dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Upcoming"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="#222"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"/>
        </LinearLayout>

        <!-- RecyclerView for reservations -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvReservations"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:padding="8dp"
            android:clipToPadding="false"/>

        <!-- Past Section başlığı ve kartları -->
        <TextView
            android:id="@+id/tvPastTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Past (3)"
            android:textSize="18sp"
            android:textColor="#222"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"/>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvReservationsPast"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:clipToPadding="false"/>

        <!-- Bottom Navigation Bar -->
        <include layout="@layout/bottom_navigation" />
    </LinearLayout>

    <!-- Floating Add Button (her zaman alt menüyle arasında 16dp olacak şekilde) -->
    <ImageButton
        android:id="@+id/btnAddReservation"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:src="@drawable/ic_add"
        android:background="@drawable/bg_circle_orange"
        android:elevation="8dp"
        android:layout_gravity="center|bottom"
        android:layout_marginBottom="80dp"/>

</FrameLayout>
