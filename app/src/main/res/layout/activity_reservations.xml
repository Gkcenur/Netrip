<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@color/topBar"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingStart="8dp"
        android:paddingEnd="8dp">

        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_back"
            android:contentDescription="@string/back" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Reservations"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:textSize="20sp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Paris, France"
                android:textColor="@android:color/white"
                android:textSize="14sp" />
        </LinearLayout>
    </LinearLayout>

    <!-- Filter Chips + Search Icon Row -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/white"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp">

        <HorizontalScrollView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/white">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/chipAll"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:text="All"
                    android:textColor="@color/black"
                    android:background="@drawable/bg_chip_selected" />
                <Button
                    android:id="@+id/chipFlights"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:text="Flights"
                    android:textColor="@color/black"
                    android:background="@drawable/bg_chip"
                    android:layout_marginStart="8dp"/>
                <Button
                    android:id="@+id/chipHotels"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:text="Hotels"
                    android:textColor="@color/black"
                    android:background="@drawable/bg_chip"
                    android:layout_marginStart="8dp"/>
                <Button
                    android:id="@+id/chipActivities"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:text="Activities"
                    android:textColor="@color/black"
                    android:background="@drawable/bg_chip"
                    android:layout_marginStart="8dp"/>
            </LinearLayout>
        </HorizontalScrollView>

        <ImageButton
            android:id="@+id/btnSearch"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_search"
            android:contentDescription="Search" />
    </LinearLayout>

    <!-- Upcoming Section -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Upcoming"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"/>

    <!-- RecyclerView -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvReservations"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="8dp"
        android:clipToPadding="false"/>

    <!-- Past Section -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Past (3)"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp"/>

    <!-- Floating Add Button -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="72dp">
        <ImageButton
            android:id="@+id/btnAddReservation"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:src="@drawable/ic_add"
            android:background="@drawable/bg_circle_orange"
            android:elevation="8dp"
            android:layout_gravity="center"
            android:layout_marginTop="-32dp"/>
    </FrameLayout>

    <include layout="@layout/bottom_navigation" />
</LinearLayout>
