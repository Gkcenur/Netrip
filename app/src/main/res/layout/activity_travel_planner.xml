<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bgMain">

    <!-- Üst Bar -->
    <LinearLayout
        android:id="@+id/topBar"
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:background="@color/topBar"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingStart="8dp"
        android:paddingEnd="8dp">

        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/bg_circle_trans_white"
            android:src="@drawable/ic_back_planner"
            android:contentDescription="@string/back"
            android:padding="8dp" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Travel Planner"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="@android:color/white" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Paris, France"
                android:textSize="14sp"
                android:textColor="@android:color/white" />
        </LinearLayout>

        <Button
            android:id="@+id/btnDay"
            android:layout_width="48dp"
            android:layout_height="36dp"
            android:background="@drawable/bg_circle_trans_white"
            android:text="Day"
            android:textColor="@color/textSecondary"
            android:textSize="14sp"
            android:layout_gravity="center_vertical"/>
    </LinearLayout>

    <!-- Tarih ve gün seçici -->
    <LinearLayout
        android:id="@+id/dateBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/topBar"
        android:orientation="vertical"
        android:background="@android:color/transparent"
        android:paddingTop="8dp"
        android:paddingBottom="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingStart="16dp"
            android:paddingEnd="16dp">

            <ImageView
                android:id="@+id/btnPrevDay"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_chevron_left"
                android:contentDescription="@string/back"
                android:tint="@color/textSecondary"/>

            <TextView
                android:id="@+id/tvDate"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="May 18, 2025"
                android:textColor="@color/textPrimary"
                android:textSize="18sp"
                android:gravity="center"/>

            <ImageView
                android:id="@+id/btnNextDay"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_chevron_right"
                android:contentDescription="@string/next"
                android:tint="@color/textSecondary"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingTop="4dp">

            <TextView
                android:id="@+id/tvDayName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sunday"
                android:textColor="@color/textSecondary"
                android:textSize="15sp"/>

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1"
                android:background="@color/progressBg"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"/>

            <TextView
                android:id="@+id/tvDayCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Day 4 of 10"
                android:textColor="@color/textSecondary"
                android:textSize="15sp"/>
        </LinearLayout>
    </LinearLayout>

    <!-- Plan Kartları Listesi -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvPlannerEntries"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_below="@id/dateBar"
        android:layout_above="@id/btnAdd"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:clipToPadding="false"
        android:paddingBottom="16dp" />

    <!-- Bottom Navigation: EN ALTA sabitlenir -->
    <include
        android:id="@+id/bottomNav"
        layout="@layout/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true" />

    <!-- + Butonu: Menüden biraz yukarıda ve ortada -->
    <ImageButton
        android:id="@+id/btnAdd"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_centerHorizontal="true"
        android:layout_above="@id/bottomNav"
        android:layout_marginBottom="24dp"
        android:background="@drawable/bg_circle_orange"
        android:src="@android:drawable/ic_input_add"
        android:contentDescription="@string/add"
        android:tint="@color/plusButton"
        android:elevation="4dp" />

</RelativeLayout>
