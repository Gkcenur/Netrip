<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/bgMain">

    <!-- Üst Bar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:background="@color/topBar"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingStart="16dp"
        android:paddingEnd="16dp">

        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/bg_circle_trans_white"
            android:src="@drawable/ic_back_profile_line"
            android:contentDescription="@string/back"
            android:padding="8dp" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Profile"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="@android:color/white" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Account Settings"
                android:textSize="14sp"
                android:textColor="@android:color/white" />
        </LinearLayout>

        <ImageView
            android:id="@+id/btnAdd"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/bg_circle_trans_white"
            android:src="@drawable/ic_add_profile_line"
            android:contentDescription="@string/add"
            android:padding="8dp" />
    </LinearLayout>

    <!-- Profil Kartı -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/bg_profile_card"
        android:layout_margin="16dp"
        android:padding="16dp"
        android:elevation="2dp"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:src="@drawable/ic_profile_circle"
            android:contentDescription="@string/profile"
            android:background="@android:color/transparent" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Alex Johnson"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="@color/textPrimary" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="alex.johnson@email.com"
                android:textSize="14sp"
                android:textColor="@color/textSecondary" />
        </LinearLayout>
    </LinearLayout>

    <!-- Account Settings -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Account Settings"
        android:textStyle="bold"
        android:textColor="@color/textPrimary"
        android:textSize="16sp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="4dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp">

        <!-- Personal Information -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:orientation="horizontal"
            android:background="@drawable/bg_profile_card"
            android:gravity="center_vertical"
            android:padding="12dp"
            android:layout_marginBottom="8dp"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/ic_personal_info"
                android:contentDescription="@string/personal_info" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Personal Information"
                android:textColor="@color/textPrimary"
                android:textSize="15sp"
                android:layout_marginStart="12dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=">"
                android:textColor="@color/textSecondary"
                android:textSize="18sp" />
        </LinearLayout>

        <!-- Security -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:orientation="horizontal"
            android:background="@drawable/bg_profile_card"
            android:gravity="center_vertical"
            android:padding="12dp"
            android:layout_marginBottom="8dp"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/ic_security"
                android:contentDescription="@string/security" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Security"
                android:textColor="@color/textPrimary"
                android:textSize="15sp"
                android:layout_marginStart="12dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=">"
                android:textColor="@color/textSecondary"
                android:textSize="18sp" />
        </LinearLayout>
    </LinearLayout>

    <!-- Preferences -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Preferences"
        android:textStyle="bold"
        android:textColor="@color/textPrimary"
        android:textSize="16sp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="4dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp">

        <!-- Language -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:orientation="horizontal"
            android:background="@drawable/bg_profile_card"
            android:gravity="center_vertical"
            android:padding="12dp"
            android:layout_marginBottom="8dp"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/ic_language"
                android:contentDescription="@string/language" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Language"
                android:textColor="@color/textPrimary"
                android:textSize="15sp"
                android:layout_marginStart="12dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="English >"
                android:textColor="@color/textSecondary"
                android:textSize="15sp" />
        </LinearLayout>

        <!-- Currency -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:orientation="horizontal"
            android:background="@drawable/bg_profile_card"
            android:gravity="center_vertical"
            android:padding="12dp"
            android:layout_marginBottom="8dp"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/ic_currency"
                android:contentDescription="@string/currency" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Currency"
                android:textColor="@color/textPrimary"
                android:textSize="15sp"
                android:layout_marginStart="12dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="USD >"
                android:textColor="@color/textSecondary"
                android:textSize="15sp" />
        </LinearLayout>
    </LinearLayout>

    <!-- About (isteğe bağlı) -->

    <!-- Bottom Navigation -->
    <include layout="@layout/bottom_navigation" />

</LinearLayout>
