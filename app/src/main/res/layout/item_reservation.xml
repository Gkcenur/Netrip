<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"
    android:background="@drawable/bg_card_white_border_rounded">

    <!-- Sol renkli bar -->
    <View
        android:id="@+id/colorBar"
        android:layout_width="4dp"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp"
        android:background="@color/green" />

    <!-- Daire içinde baş harfler -->
    <TextView
        android:id="@+id/tvInitials"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_toEndOf="@id/colorBar"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/bg_circle_grey"
        android:gravity="center"
        android:text="AF"
        android:textColor="#888888"
        android:textStyle="bold"
        android:textSize="15sp" />

    <!-- İçerik -->
    <LinearLayout
        android:id="@+id/contentLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/tvInitials"
        android:layout_alignTop="@id/tvInitials"
        android:orientation="vertical"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="60dp">

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Air France"
            android:textStyle="bold"
            android:textColor="#222222"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tvSubtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Flight AF1234"
            android:textColor="#888888"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/tvDateInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="May 15, 2025 • 10:30 AM"
            android:textColor="#888888"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/tvLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New York (JFK) → Paris (CDG)"
            android:textColor="#888888"
            android:textSize="13sp" />
    </LinearLayout>

    <!-- Confirmed etiketi -->
    <TextView
        android:id="@+id/tvStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:text="Confirmed"
        android:textColor="#4CAF50"
        android:background="@drawable/bg_confirmed_rounded"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:textSize="13sp"
        android:textStyle="bold" />

    <!-- Artı butonu -->
    <ImageButton
        android:id="@+id/btnAdd"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/tvStatus"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/ic_add"
        android:background="@android:color/transparent"
        android:tint="#EBA07A" />

</RelativeLayout>
