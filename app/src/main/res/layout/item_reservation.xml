<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:orientation="horizontal" android:background="@drawable/bg_home_card"
    android:padding="12dp" android:layout_marginBottom="8dp">

    <!-- Renkli bar -->
    <View
        android:id="@+id/colorBar"
        android:layout_width="4dp" android:layout_height="match_parent"
        android:layout_marginEnd="8dp"
        android:background="@color/categoryAccommodation"/>

    <!-- Solda daire içinde baş harfler -->
    <TextView
        android:id="@+id/tvInitials"
        android:layout_width="36dp" android:layout_height="36dp"
        android:background="@drawable/bg_circle_white"
        android:gravity="center" android:text="AF"
        android:textColor="@color/textPrimary" android:textStyle="bold"
        android:textSize="16sp" android:layout_marginEnd="12dp"/>

    <!-- Orta içerik -->
    <LinearLayout
        android:layout_width="0dp" android:layout_height="wrap_content"
        android:layout_weight="1" android:orientation="vertical">

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:text="Air France" android:textStyle="bold"
            android:textColor="@color/textPrimary" android:textSize="15sp"/>

        <TextView
            android:id="@+id/tvSubtitle"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:text="Flight AF1234" android:textColor="@color/textSecondary"
            android:textSize="13sp"/>

        <TextView
            android:id="@+id/tvDateInfo"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:text="May 15, 2025 - 10:30 AM" android:textColor="@color/textSecondary"
            android:textSize="13sp"/>

        <TextView
            android:id="@+id/tvLocation"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:text="New York (JFK) → Paris (CDG)" android:textColor="@color/textSecondary"
            android:textSize="13sp"/>
    </LinearLayout>

    <!-- Sağda durum ve ekle butonu -->
    <LinearLayout
        android:layout_width="wrap_content" android:layout_height="match_parent"
        android:orientation="vertical" android:gravity="end|center_vertical">

        <TextView
            android:id="@+id/tvStatus"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:text="Confirmed" android:textColor="@color/emergencyGreen"
            android:background="@drawable/bg_confirmed"
            android:padding="6dp" android:textSize="13sp"
            android:textStyle="bold" android:layout_gravity="end"/>

        <ImageButton
            android:id="@+id/btnAdd"
            android:layout_width="32dp" android:layout_height="32dp"
            android:src="@drawable/ic_add"
            android:background="@android:color/transparent"
            android:layout_gravity="end" android:layout_marginTop="8dp"/>
    </LinearLayout>
</LinearLayout>
