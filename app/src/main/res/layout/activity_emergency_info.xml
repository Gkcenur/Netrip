<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="0dp">

        <!-- Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="@color/emergencyRed"
            android:gravity="center_vertical"
            android:paddingStart="8dp"
            android:paddingEnd="8dp">

            <ImageButton
                android:id="@+id/btnBack"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_back_emergency"
                android:contentDescription="@string/back" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/emergency_info"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"
                    android:textSize="20sp" />

            </LinearLayout>
        </LinearLayout>

        <!-- Emergency Numbers Card -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/bg_card_red"
            android:padding="16dp"
            android:layout_marginTop="16dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="12dp">
                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_dot_red"
                    android:layout_marginEnd="8dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Emergency Numbers"
                    android:textColor="@color/emergencyRed"
                    android:textStyle="bold"
                    android:textSize="16sp"/>
            </LinearLayout>

            <!-- 1. satır: USA -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="8dp">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="USA (All Services)"
                    android:textColor="@color/textPrimary"
                    android:textSize="15sp"/>
                <TextView
                    android:layout_width="48dp"
                    android:layout_height="32dp"
                    android:gravity="center"
                    android:background="@drawable/bg_circle_red"
                    android:text="911"
                    android:textColor="@color/emergencyRed"
                    android:textStyle="bold"
                    android:textSize="16sp"/>
            </LinearLayout>

            <!-- 2. satır: Germany -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="8dp">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Germany (All Services)"
                    android:textColor="@color/textPrimary"
                    android:textSize="15sp"/>
                <TextView
                    android:layout_width="48dp"
                    android:layout_height="32dp"
                    android:gravity="center"
                    android:background="@drawable/bg_circle_red"
                    android:text="112"
                    android:textColor="@color/emergencyRed"
                    android:textStyle="bold"
                    android:textSize="16sp"/>
            </LinearLayout>

            <!-- 3. satır: UK -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="8dp">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="UK (All Services)"
                    android:textColor="@color/textPrimary"
                    android:textSize="15sp"/>
                <TextView
                    android:layout_width="48dp"
                    android:layout_height="32dp"
                    android:gravity="center"
                    android:background="@drawable/bg_circle_red"
                    android:text="999"
                    android:textColor="@color/emergencyRed"
                    android:textStyle="bold"
                    android:textSize="16sp"/>
            </LinearLayout>

            <!-- 4. satır: Fransa (örnek, istersen değiştirebilirsin) -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="8dp">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="France (All Services)"
                    android:textColor="@color/textPrimary"
                    android:textSize="15sp"/>
                <TextView
                    android:layout_width="48dp"
                    android:layout_height="32dp"
                    android:gravity="center"
                    android:background="@drawable/bg_circle_red"
                    android:text="112"
                    android:textColor="@color/emergencyRed"
                    android:textStyle="bold"
                    android:textSize="16sp"/>
            </LinearLayout>
        </LinearLayout>

        <!-- Important Locations Card -->
        <include layout="@layout/card_important_locations" />

        <!-- Key Phrases Card -->
        <include layout="@layout/card_key_phrases" />

        <!-- Bottom Navigation (isteğe bağlı) -->
        <include layout="@layout/bottom_navigation" />
    </LinearLayout>
</ScrollView>
