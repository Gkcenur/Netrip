<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="100dp"
    android:orientation="horizontal"
    android:background="@drawable/bg_planner_card_white"
    android:layout_marginBottom="16dp"
    android:elevation="2dp"
    android:padding="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <!-- Renkli kenar -->
        <View
            android:id="@+id/sectionColor"
            android:layout_width="4dp"
            android:layout_height="match_parent"
            android:background="@color/orange" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="12dp">

            <TextView
                android:id="@+id/tvSection"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Morning"
                android:textColor="@color/orange"
                android:textStyle="bold"
                android:textSize="15sp"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/tvTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="9:00 AM - 12:00 PM"
                android:textColor="@color/textSecondary"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Eiffel Tower Visit"
                android:textColor="@color/textPrimary"
                android:textStyle="bold"
                android:textSize="15sp"
                android:layout_marginTop="4dp" />

            <TextView
                android:id="@+id/tvAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Champ de Mars, 5 Av. Anatole France"
                android:textColor="@color/textSecondary"
                android:textSize="13sp"
                android:layout_marginTop="2dp" />

            <TextView
                android:id="@+id/tvNote"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Note: Skip-the-line tickets booked"
                android:textColor="@color/textSecondary"
                android:textSize="12sp"
                android:layout_marginTop="2dp" />
        </LinearLayout>

        <!-- ArtÄ± butonu -->
        <ImageButton
            android:id="@+id/btnAddCircle"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_add_circle"
            android:contentDescription="@string/add"
            android:tint="@color/plusButton"
            android:layout_gravity="center" />
    </LinearLayout>
</LinearLayout>
